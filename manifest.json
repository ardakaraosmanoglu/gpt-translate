{
  "manifest_version": 3,
  "author": "Raxana.NET",
  "name": "OpenAI GPT-3.5 Translator",
  "description": "Utilize GPT-3.5 for on-the-fly web text translation. Effortlessly understand foreign content by inputting text and letting GPT-3.5 work its magic.",
  "version": "1.7",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "host_permissions": ["https://api.openai.com/"],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
